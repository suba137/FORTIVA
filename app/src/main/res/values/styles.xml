<resources>
    <!-- ðŸ”¹ Estilo para botones Fortiva -->
    <style name="Widget.Fortiva.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ðŸ”¹ Estilo para TextInputLayout Fortiva -->
    <style name="Widget.Fortiva.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorHint</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- ðŸ”¹ Estilo para texto del BottomNavigationView compacto -->
    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- ðŸ”¹ Estilo para los EditText dentro de TextInputLayout -->
    <style name="Widget.Fortiva.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
